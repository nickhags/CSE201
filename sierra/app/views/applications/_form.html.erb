<%= form_for (setup_application(@application)) do |form| %>
        <p>
                <%= form.label :title %><br>
                <%= form.text_field :title %>
        </p>
        <p>
                <%= form.label :description %><br>
                <%= form.text_area :description %>
        </p>
        <p>
                <%= form.label :developers %><br>
                <%= form.text_field :developers %>
        </p>
        <p>
                <%= form.label :platforms %><br>
                <%= form.text_field :platforms %>
        </p>
        <p>
                <%= form.label :url %><br>
                <%= form.text_field :url %>
        </p>
        <p>
                <%= form.label :price %><br>
                <%= form.text_field :price %>
        </p>
	<h2>Picture File Upload</h2>	
	<%= form.fields_for :images, Image. new do |pic| %>
	<p>
		<%= pic.label :picture %><br>
		<%= pic.file_field :picture %>
	</p>
	<% end %>
        <p>
                <%= form.submit %>
        </p>
<% end %>
