<%= render 'games/header' %>
<h2>Search Results:</h2>
<table border="1" style="width:100%, text-align:center">
<thead>
	<tr>
		<th></th>
    		<th>Title</th>
    		<th>Description</th>
		<th>Price</th>
		<th></th>
 	 </tr>
</thead>
  <% @results.each do |result| %>
	  <tr>
		  <td width="350" height="200"><%= image_tag result.cover_photo.url, size: "350x200", :alt => "rss feed" %></td>
      <td width="200"><%= result.title %></td>
      <td><%= result.description %></td>
      <td width="70"><%= result.price %></td>
      <td width="200"><%= link_to 'View', game_path(result) %> | <%= link_to 'Buy', "#{result.url}", :target => "_blank" %> </td>
    </tr>
  <% end %>
</table>

