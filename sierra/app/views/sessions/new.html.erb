<p id="alert"><%= alert %></p>

<h3>Login</h3>

<%= form_tag sessions_path do |form| %>
	<div class = "field">
		<%= label_tag :username %>
		<%= text_field_tag :name %>
	</div>
	
	<div class = "field">
		<%= label_tag :password %>
		<%= text_field_tag :password %>
	</div>
	
	<div class = "actions">
		<%= submit_tag "Login" %>
	</div>
	
<% end %>


<%= link_to "Don't have an account? Sign up here!", signup_path %>
